<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="NoTraslucentTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="NoTitleNoTraslucentTheme" parent="NoTraslucentTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="line" parent="android:Widget.TextView">
        <item name="android:background">#DcDcDc</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="CustomRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ToolbarIconStyle" parent="CustomRadioButton">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@color/selector_toolbar_text_color</item>
    </style>

    <style name="WhiteSmallButton">
        <item name="android:background">@drawable/selector_white_button_bg</item>
        <item name="android:textSize">@dimen/font_28</item>
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dip</item>
    </style>
</resources>
