<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:background="@color/background_material_dark"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_my_friend"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/icon_friend"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="我的朋友"
            android:textColor="@color/white_ffffff"
            android:textSize="@dimen/font_32" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1px"
        android:background="@color/black_ff404040" />

    <RelativeLayout
        android:id="@+id/rl_add_friend"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/icon_add_fri"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="添加好友"
            android:textColor="@color/white_ffffff"
            android:textSize="@dimen/font_32" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1px"
        android:background="@color/black_ff404040" />

    <RelativeLayout
        android:id="@+id/rl_scan_qr_code"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/icon_scan_qr_code"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="扫二维码"
            android:textColor="@color/white_ffffff"
            android:textSize="@dimen/font_32" />
    </RelativeLayout>


</LinearLayout>