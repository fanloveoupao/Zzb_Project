<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@color/white_ffffff"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/ll_projetct_area"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/province_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/image_province"
                android:ellipsize="end"
                android:maxEms="3"
                android:singleLine="true"
                android:text="学院"
                android:textColor="@color/black_555555"
                android:textSize="@dimen/font_30"/>

            <ImageView
                android:id="@+id/image_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/sprinner_gray_down"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="0.1dp"
        android:layout_height="45dp"
        android:background="@color/gray_cccccc"/>

    <LinearLayout
        android:id="@+id/ll_project_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/alltype_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/image_type"
                android:ellipsize="end"
                android:maxEms="3"
                android:singleLine="true"
                android:text="类型"
                android:textColor="@color/black_555555"
                android:textSize="@dimen/font_30"/>

            <ImageView
                android:id="@+id/image_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/sprinner_gray_down"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="0.1dp"
        android:layout_height="45dp"
        android:background="@color/gray_cccccc"/>

    <LinearLayout
        android:id="@+id/ll_project_stage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/allstage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/image_stage"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="3"
                android:singleLine="true"
                android:text="校区"
                android:textColor="@color/black_555555"
                android:textSize="@dimen/font_30"/>

            <ImageView
                android:id="@+id/image_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/sprinner_gray_down"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

